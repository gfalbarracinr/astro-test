---
import clients from '../data/clients.json';
---
<style>
    .client-title {
        text-align: center;
        color: #6b2875;
        font-weight: 600;
        margin: 1em 0 0.75em;
        text-shadow: none;
        font-size: 36px;
        line-height: 1.1;
    }
    .client-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        gap: 30px;
        max-width: 800px;
        margin: auto;
    }
    .client-img {
        max-height: 100;
        max-width: 150px;
    }
    .img-main {
        display: block;
        margin: auto;
        text-align: center;
        margin-bottom: 30px;
    }
</style>
<section class="client-section">
    <h1 class="client-title">We develop great working relationships and end results with leading companies and organizations</h1>
    <article class="container">
        <img class="client-img img-main" src="src/assets/images/clients/google.png" alt="Google logo"/>
        <div class="client-container">
            {
                clients.map((client) => (
                    <img class="client-img" src={`src/assets/${client.img}`} alt={client.alt}/>
                ))
            }
        </div>
    </article>
</section>